import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner scan = new Scanner(System.in);
        int num = scan.nextInt();
        num = Math.abs(num);
        int sum =0;
        
       
        while(num!=0)
        {
            int value = num%10;
            sum = sum+value;
             num = num/10;
        }
    
    System.out.println(sum);
}}
