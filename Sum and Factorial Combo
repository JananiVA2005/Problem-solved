public class Solution {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int n = scan.nextInt();
        int sum =0;
        int mul=1;
        for(int i=n;i>=1;i--){
            mul = mul*i;
            sum = sum+i;
        }
    
    System.out.println(sum);
    System.out.println(mul);
}}
